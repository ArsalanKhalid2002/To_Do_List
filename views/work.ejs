<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/main.css">
</head>
<body>
    <%- include("partials/header") %>

    <div class="box" id="heading">
        <h1>
        Work List
        </h1>
      </div>
      <div class="box">
        <% for(var i = 0; i < tasklist.length; i++){ %>
        <div class="item">
          <input type="checkbox">
          <p>
            <%= tasklist[i] %>
          </p>
        </div>
        <% } %>
    
        <form class="item" action="/work" method="post">
          <input type="text" name="work" placeholder="New Item" autocomplete="off">
          <button type="submit" name="todowork">+</button>
        </form>
      </div>
</body>
<%- include("partials/footer") %> 
</html>